<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profme"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img"
            android:layout_width="700px"
            android:layout_height="700px"
            android:src="@drawable/profimg" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="200sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="@drawable/profform"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usernamet"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"
                android:text="yassine" />

            <View
                android:layout_width="0dp"
                android:layout_height="35sp"></View>

            <TextView
                android:id="@+id/passwordt"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:text="hh" />

            <View
                android:layout_width="0dp"
                android:layout_height="30sp"></View>

            <TextView
                android:id="@+id/namet"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:text="hhhh" />


            <View
                android:layout_width="0dp"
                android:layout_height="35sp"></View>

            <TextView
                android:id="@+id/emailt"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:text="hhhh" />

            <TextView
                android:id="@+id/birthdayt"
                style="@style/text"
                android:layout_width="130sp"
                android:layout_height="20sp"
                android:layout_gravity="center" />

            <View
                android:layout_width="0dp"
                android:layout_height="10sp"></View>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

